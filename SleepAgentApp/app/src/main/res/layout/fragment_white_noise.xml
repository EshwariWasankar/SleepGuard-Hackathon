<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/sound_capsule"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#F5F5F5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/text_sound_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adaptive Smart Noise"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/visualizer_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true">

        <com.example.sleepagentapp.BlobView
            android:id="@+id/windy_globe"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/progress_volume"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressDrawable="@android:drawable/progress_horizontal"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:alpha="0.3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_db_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 dB"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idle"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/alarm_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/visualizer_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAKE UP AT"
            android:textColor="#999999"
            android:textSize="12sp"
            android:letterSpacing="0.1"/>

        <TextView
            android:id="@+id/alarm_time_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00 AM"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#333333"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play_noise"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="PLAY SMART NOISE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:backgroundTint="#000000"
        android:textColor="#FFFFFF"/>

</RelativeLayout>